<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.reaksmeyarun.pda">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_pos"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_pos"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.D0100DashboardActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".view.activity.S0100StockInventoryActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.Z0300AboutUsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.Z0200SettingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.P0400PromotionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.Z0100SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.P0100SignInActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.P0300InboxActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.P0200HomeActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity" />
    </application>

</manifest>