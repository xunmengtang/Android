<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vmVerification"
            type="com.reaksmeyarun.pda.viewmodel.VerificationViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/baseColor">
                <ImageView
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_centerInParent="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_logo"
                    android:elevation="8dp"
                    android:background="@drawable/background_round_base_color_16dp"
                    android:scaleType="center"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="@dimen/fab_margin">
                <com.reaksmeyarun.pda.customView.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/verifyOTP"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/baseColor"
                    android:textSize="@dimen/largeTitleSize"/>
                <com.reaksmeyarun.pda.customView.MyEditText
                    android:id="@+id/etOTP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="******"
                    android:lineSpacingExtra="8dp"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:textColor="@color/baseColor"
                    android:layout_marginTop="@dimen/fab_margin_medium"
                    android:includeFontPadding="true"
                    android:layout_marginStart="@dimen/fab_margin_very_ultra"
                    android:layout_marginEnd="@dimen/fab_margin_very_ultra"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginStart="@dimen/fab_margin_very_ultra"
                    android:layout_marginEnd="@dimen/fab_margin_very_ultra"
                    android:background="@color/baseColor"/>
                <com.reaksmeyarun.pda.customView.MyTextView
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:textColor="#989898"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Code Expires in 01:20"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/fab_margin_high"
                    android:layout_marginEnd="@dimen/fab_margin_high">
                    <com.reaksmeyarun.pda.customView.MyTextView
                        android:textAllCaps="false"
                        android:textColor="#989898"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Didn't receive code?"/>
                    <com.reaksmeyarun.pda.customView.MyTextView
                        android:onClick="@{vmVerification::handleResendVerification}"
                        android:layout_marginStart="@dimen/defMargin"
                        android:textAllCaps="true"
                        android:textColor="#989898"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:text="Resend"/>
                </LinearLayout>
                <Button
                    android:onClick="@{vmVerification::handleVerification}"
                    android:elevation="8dp"
                    android:background="@drawable/background_round_base_color_8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="@dimen/fab_margin_very_ultra"
                    android:layout_marginEnd="@dimen/fab_margin_very_ultra"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:text="@string/verify"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/light_gray">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.WhiteAccent"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>