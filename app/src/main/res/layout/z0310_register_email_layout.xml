<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="vmSetting"
            type="com.reaksmeyarun.pda.viewmodel.SettingViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
                <ImageView
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:src="@drawable/ic_arrow_left_basecolor"
                    style="@style/Widget.AppCompat.Button.Borderless"/>
                <com.reaksmeyarun.pda.customView.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/email"
                    android:textSize="@dimen/largeTitleSize"
                    android:gravity="center"/>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/bigMargin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/cardview_default_elevation"
                app:cardCornerRadius="@dimen/cardview_default_radius">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/bigMargin">
                    <com.reaksmeyarun.pda.customView.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/email"/>
                    <com.reaksmeyarun.pda.customView.MyEditText
                        android:layout_marginTop="@dimen/defMargin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email"/>
                    <com.reaksmeyarun.pda.customView.MyTextView
                        android:layout_marginTop="@dimen/bigMargin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/password"/>
                    <com.reaksmeyarun.pda.customView.MyEditText
                        android:layout_marginTop="@dimen/defMargin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password"/>
                    <com.reaksmeyarun.pda.customView.MyTextView
                        android:layout_marginTop="@dimen/bigMargin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/conPassword"/>
                    <com.reaksmeyarun.pda.customView.MyEditText
                        android:layout_marginTop="@dimen/defMargin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/conPassword"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <com.reaksmeyarun.pda.customView.ButtonPositive
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/defMargin"
            android:layout_marginStart="@dimen/defMargin"/>
    </RelativeLayout>
</layout>