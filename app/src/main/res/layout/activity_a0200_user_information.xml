<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="@dimen/fab_margin_medium"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/white"
                    app:civ_border_color="@color/light_gray"
                    app:civ_border_width="2dp"/>
                <ImageView
                    android:elevation="4dp"
                    android:layout_margin="@dimen/defMargin"
                    android:src="@drawable/ic_photo_camera_black_24dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.reaksmeyarun.pda.customView.MyTextView
                    android:layout_marginTop="@dimen/fab_margin_very_ultra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/firstName"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/fab_margin_very_high"
                    android:layout_marginEnd="100dp"/>
                <com.reaksmeyarun.pda.customView.MyEditText
                    android:drawablePadding="@dimen/fab_margin"
                    android:drawableLeft="@drawable/ic_ponter"
                    android:layout_marginStart="@dimen/fab_margin_very_high"
                    android:layout_marginEnd="75dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginStart="@dimen/fab_margin_very_ultra"
                    android:layout_marginEnd="75dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/baseColor"/>
                <com.reaksmeyarun.pda.customView.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lastName"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_marginStart="@dimen/fab_margin_very_high"
                    android:layout_marginEnd="100dp"/>
                <com.reaksmeyarun.pda.customView.MyEditText
                    android:drawablePadding="@dimen/fab_margin"
                    android:drawableLeft="@drawable/ic_ponter"
                    android:layout_marginStart="@dimen/fab_margin_very_high"
                    android:layout_marginEnd="75dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginStart="@dimen/fab_margin_very_ultra"
                    android:layout_marginEnd="75dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/baseColor"/>
                <com.reaksmeyarun.pda.customView.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/position"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_marginStart="@dimen/fab_margin_very_high"
                    android:layout_marginEnd="100dp"/>
                <Spinner
                    android:id="@+id/spinnerPosition"
                    android:layout_marginStart="@dimen/fab_margin_very_high"
                    android:layout_marginEnd="60dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/defButtonHeight"/>
                <View
                    android:layout_marginStart="@dimen/fab_margin_very_high"
                    android:layout_marginEnd="75dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/baseColor"/>
                <com.reaksmeyarun.pda.customView.MyTextView
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email_address"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/fab_margin_very_high"
                    android:layout_marginEnd="100dp"/>
                <com.reaksmeyarun.pda.customView.MyEditText
                    android:drawablePadding="@dimen/fab_margin"
                    android:drawableLeft="@drawable/ic_ponter"
                    android:layout_marginStart="@dimen/fab_margin_very_high"
                    android:layout_marginEnd="75dp"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginStart="@dimen/fab_margin_very_ultra"
                    android:layout_marginEnd="75dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/baseColor"/>
                <com.reaksmeyarun.pda.customView.MyTextView
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/phoneNumber"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/fab_margin_very_high"
                    android:layout_marginEnd="100dp"/>
                <com.reaksmeyarun.pda.customView.MyEditText
                    android:drawablePadding="@dimen/fab_margin"
                    android:drawableLeft="@drawable/ic_ponter"
                    android:layout_marginStart="@dimen/fab_margin_very_high"
                    android:layout_marginEnd="75dp"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginStart="@dimen/fab_margin_very_ultra"
                    android:layout_marginEnd="75dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/baseColor"/>
                <com.reaksmeyarun.pda.customView.MyTextView
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bod"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/fab_margin_very_high"
                    android:layout_marginEnd="100dp"/>
                <com.reaksmeyarun.pda.customView.MyEditText
                    android:drawablePadding="@dimen/fab_margin"
                    android:drawableLeft="@drawable/ic_ponter"
                    android:layout_marginStart="@dimen/fab_margin_very_high"
                    android:layout_marginEnd="75dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginStart="@dimen/fab_margin_very_ultra"
                    android:layout_marginEnd="75dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/baseColor"/>
                <com.reaksmeyarun.pda.customView.MyTextView
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bop"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/fab_margin_very_high"
                    android:layout_marginEnd="100dp"/>
                <com.reaksmeyarun.pda.customView.MyEditText
                    android:drawablePadding="@dimen/fab_margin"
                    android:drawableLeft="@drawable/ic_ponter"
                    android:gravity="top"
                    android:layout_marginStart="@dimen/fab_margin_very_high"
                    android:layout_marginEnd="75dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginStart="@dimen/fab_margin_very_ultra"
                    android:layout_marginEnd="75dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/baseColor"/>
                <Button
                    android:layout_margin="@dimen/fab_margin_very_ultra"
                    android:layout_gravity="center"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:drawableRight="@drawable/ic_save"
                    android:paddingEnd="@dimen/fab_margin_high"
                    android:paddingStart="@dimen/fab_margin_very_high"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/background_round_base_color_8dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>