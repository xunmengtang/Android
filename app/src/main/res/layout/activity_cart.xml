<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.activity.CartActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:theme="@style/ToolBarStyle"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="1dp">
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_marginStart="@dimen/defMargin"
                    android:clickable="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/background_round_base_color_8dp"
                    android:elevation="8dp"
                    android:src="@drawable/ic_arrow_left_basecolor"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <com.reaksmeyarun.pda.customView.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cart"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/fab_margin_medium"
            android:layout_marginTop="@dimen/fab_margin"
            android:textSize="@dimen/bigTitleSize"/>
        <com.reaksmeyarun.pda.customView.MyTextView
            android:layout_gravity="end"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="clear all"
            android:textAlignment="center"
            android:layout_marginEnd="@dimen/fab_margin_medium"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rvCart"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/fab_margin_medium"
            android:paddingEnd="@dimen/fab_margin_medium"
            android:paddingBottom="@dimen/fab_margin_medium"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.reaksmeyarun.pda.customView.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:layout_weight="1"
                    android:textSize="@dimen/largeTitleSize"
                    android:textColor="@color/black"/>
                <com.reaksmeyarun.pda.customView.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 120"
                    android:id="@+id/totalPrice"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    android:textSize="@dimen/largeTitleSize"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>