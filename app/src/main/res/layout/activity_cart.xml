<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vmCart"
            type="com.reaksmeyarun.pda.viewmodel.CartViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.activity.CartActivity">
        <com.reaksmeyarun.pda.customView.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cart"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/fab_margin_medium"
            android:layout_marginTop="@dimen/fab_margin"
            android:textSize="@dimen/bigTitleSize"/>
        <com.reaksmeyarun.pda.customView.MyTextView
            android:onClick="@{vmCart::handleClearAll}"
            android:layout_gravity="end"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="clear all"
            android:textAlignment="center"
            android:layout_marginEnd="@dimen/fab_margin_medium"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rvCart"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/fab_margin_medium"
            android:paddingEnd="@dimen/fab_margin_medium"
            android:paddingBottom="@dimen/fab_margin_medium"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.reaksmeyarun.pda.customView.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:layout_weight="1"
                    android:textSize="@dimen/largeTitleSize"
                    android:textColor="@color/black"/>
                <com.reaksmeyarun.pda.customView.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 0.0"
                    android:id="@+id/totalPrice"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    android:textSize="@dimen/largeTitleSize"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>