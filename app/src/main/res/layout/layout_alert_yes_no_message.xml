<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="@dimen/alert_width"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.reaksmeyarun.pda.customView.MyTextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/baseColor"
            android:textSize="@dimen/defTitleSize"
            android:textColor="@color/white"
            android:text="Alert"
            android:gravity="center" />

        <com.reaksmeyarun.pda.customView.MyTextView
            android:id="@+id/txtMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginStart="@dimen/defMargin"
            android:layout_marginEnd="@dimen/defMargin"
            android:textSize="@dimen/bigLabelSize"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.reaksmeyarun.pda.customView.ButtonNegative
                android:id="@+id/popupBtnNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/defButtonHeight"
                android:text="@string/no"
                android:elevation="8dp"
                android:layout_marginBottom="@dimen/defMargin"
                android:layout_marginStart="@dimen/fab_margin_high"
                android:layout_marginEnd="@dimen/defMargin"
                android:layout_weight="1" />

            <com.reaksmeyarun.pda.customView.ButtonPositive
                android:id="@+id/popupBtnYes"
                android:layout_width="match_parent"
                android:layout_height="@dimen/defButtonHeight"
                android:text="@string/yes"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_marginEnd="@dimen/fab_margin_high"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</layout>