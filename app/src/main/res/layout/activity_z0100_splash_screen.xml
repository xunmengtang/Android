<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vmSplashScreen"
            type="com.reaksmeyarun.pda.viewmodel.SplashScreenViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/baseColor"
        tools:context=".view.activity.Z0100SplashScreenActivity">
        <ImageButton
            android:id="@+id/logo"
            android:clickable="false"
            android:layout_centerInParent="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_logo"
            android:elevation="8dp"
            android:background="@drawable/background_round_base_color_16dp"
            android:scaleType="center"/>
        <ProgressBar
            android:layout_marginTop="@dimen/fab_margin_very_ultra"
            android:layout_centerInParent="true"
            android:layout_below="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.WhiteAccent" />

        <TextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="34dp"
            android:fontFamily="@font/black_lives_mvwgx"
            android:text="@string/app_version"
            android:textAlignment="center"
            android:textColor="@color/white" />
    </RelativeLayout>
</layout>