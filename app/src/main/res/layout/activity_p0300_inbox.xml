<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vmInbox"
            type="com.reaksmeyarun.pda.viewmodel.InboxViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.P0300InboxActivity">

        <com.reaksmeyarun.pda.customView.BaseAppBackground
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include
                    layout="@layout/p0310_inbox_layout"
                    app:vmInbox = "@{vmInbox}"/>
                <include
                    layout="@layout/p0320_inbox_detail_layout"
                    app:vmInbox = "@{vmInbox}"/>
            </FrameLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/progressing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:visibility="gone"
            android:background="@color/colorProgressing">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>