<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="vmHome"
            type="com.reaksmeyarun.pda.viewmodel.HomeViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.post.transfer.lanpost.mycustom.MyTextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="?attr/actionBarSize"
                android:text="Menu"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="@dimen/largeTitleSize"/>
            <com.post.transfer.lanpost.mycustom.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:layout_margin="@dimen/defMargin"
                android:paddingStart="@dimen/bigMargin"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defMargin"
                android:id="@+id/rvCategory"/>
            <com.post.transfer.lanpost.mycustom.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/item"
                android:paddingStart="@dimen/bigMargin"
                android:layout_margin="@dimen/defMargin"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defMargin"
                android:id="@+id/rvItem"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/recently_background"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_marginStart="@dimen/defMargin"
                android:layout_marginEnd="@dimen/defMargin"
                android:padding="@dimen/largeMargin">
                <com.post.transfer.lanpost.mycustom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/recently"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigLabelSize"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/defMargin">
                        <com.post.transfer.lanpost.mycustom.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date: 11-11-2020 10:00 AM"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.post.transfer.lanpost.mycustom.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Service by:"/>
                            <com.post.transfer.lanpost.mycustom.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ron"
                                android:paddingStart="@dimen/defMargin"
                                android:layout_weight="1"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">
                        <com.post.transfer.lanpost.mycustom.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4.5 $"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/largeMargin"
                android:layout_margin="@dimen/defMargin"
                android:background="@drawable/daily_background"
                style="@style/Widget.AppCompat.Button.Borderless">
                <com.post.transfer.lanpost.mycustom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dailySale"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigLabelSize"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/defMargin">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.post.transfer.lanpost.mycustom.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/totalSale"/>
                            <com.post.transfer.lanpost.mycustom.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:paddingStart="4dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.post.transfer.lanpost.mycustom.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/totalDiscount"/>
                            <com.post.transfer.lanpost.mycustom.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="10 $"
                                android:paddingStart="4dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <com.post.transfer.lanpost.mycustom.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100.00 $"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="32sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>