<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/bigMargin">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:padding="@dimen/defMargin">
        <com.post.transfer.lanpost.mycustom.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item name"/>
        <com.post.transfer.lanpost.mycustom.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4.5$"/>
        <com.post.transfer.lanpost.mycustom.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/bigLabelSize"/>
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/defButtonHeight"
        android:layout_height="@dimen/defButtonHeight"
        android:scaleType="center"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:src="@drawable/ic_close_black"/>
</LinearLayout>