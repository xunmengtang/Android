<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vmSeeMore"
            type="com.reaksmeyarun.pda.viewmodel.SeeMoreViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.activity.SeeMoreActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:theme="@style/ToolBarStyle"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="1dp">
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_marginStart="@dimen/defMargin"
                    android:clickable="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/background_round_base_color_8dp"
                    android:elevation="8dp"
                    android:src="@drawable/ic_arrow_left_basecolor"/>
                <ImageButton
                    android:layout_marginEnd="@dimen/fab_margin_medium"
                    android:clickable="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/background_round_base_color_8dp"
                    android:elevation="8dp"
                    android:src="@drawable/ic_shopping_cart_basecolor"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.reaksmeyarun.pda.customView.MyTextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Watches"
                    android:layout_marginStart="@dimen/fab_margin_medium"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:textSize="@dimen/bigTitleSize"/>
                <ImageView
                    android:id="@+id/banner"
                    android:layout_width="358dp"
                    android:layout_height="204dp"
                    android:src="@mipmap/watches_banner"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/defMargin"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fab_margin_medium"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:paddingStart="@dimen/fab_margin_medium"
                    android:paddingEnd="@dimen/fab_margin_medium"
                    android:orientation="horizontal">
                    <com.reaksmeyarun.pda.customView.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Feature"/>
                    <com.reaksmeyarun.pda.customView.MyTextView
                        android:onClick="@{vmSeeMore::handleSeeMore}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textAlignment="textEnd"
                        android:text="See more..."/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:id="@+id/rvFeature"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>