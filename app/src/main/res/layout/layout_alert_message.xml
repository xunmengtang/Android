<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="@dimen/alert_width"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.reaksmeyarun.pda.customView.MyTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/baseColor"
            android:textSize="@dimen/defTitleSize"
            android:textColor="@color/white"
            android:text="Information"
            android:gravity="center" />

        <com.reaksmeyarun.pda.customView.MyTextView
            android:id="@+id/txtMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/defMargin"
            android:gravity="center" />

        <com.reaksmeyarun.pda.customView.ButtonNegative
            android:id="@+id/popupBtnClose"
            android:layout_width="200dp"
            android:layout_height="@dimen/defButtonHeight"
            android:layout_margin="@dimen/defMargin"
            android:text="@string/close"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</layout>