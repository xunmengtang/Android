<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--    Style for MainActivity-->
    <style name="AppTheme.Main" parent="AppTheme.NoActionBar">
        <item name="titleTextColor">@color/baseColor</item>
        <item name="colorControlNormal">@color/baseColor</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edt_background</item>
    </style>
    <style name="TransparentStatusBar" parent="Theme.AppCompat">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/baseColor</item>
        <item name="android:textColor">@color/baseColor</item>
    </style>
    <!--    ProgressBar-->
    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/endColor</item>
    </style>
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/baseColor</item>
        <item name="android:textColorSecondary">@color/baseColor</item>
        <item name="actionMenuTextColor">@color/baseColor</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/space_gray</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="RoundedCornersDialog" parent="@style/ThemeOverlay.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">15dp</item>
    </style>
</resources>
